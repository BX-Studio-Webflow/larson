{
  "name": "@bx/larson",
  "version": "0.0.0",
  "description": "Monorepo for the larson project.",
  "homepage": "https://github.com/finsweet/developer-starter#readme",
  "license": "ISC",
  "keywords": [],
  "author": {
    "name": "Brian Kiplagat",
    "url": "https://finsweet.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/finsweet/developer-starter.git"
  },
  "bugs": {
    "url": "https://github.com/finsweet/developer-starter/issues"
  },
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm --filter ./larson-client dev\" \"pnpm --filter ./larson-server dev\"",
    "build": "concurrently \"pnpm --filter ./larson-client build\" \"pnpm --filter ./larson-server build\"",
    "dev:frontend": "pnpm --filter ./larson-client dev",
    "build:frontend": "pnpm --filter ./larson-client build",
    "dev:server": "pnpm --filter ./larson-server dev",
    "build:server": "pnpm --filter ./larson-server build",
    "deploy:frontend": "pnpm --filter ./larson-client run deploy",
    "lint": "concurrently \"pnpm -r lint\" \"prettier --check . --ignore-path .prettierignore\"",
    "lint:fix": "concurrently \"pnpm -r lint:fix\" \"prettier --write . --ignore-path .prettierignore\"",
    "check": "pnpm --filter ./larson-client check && pnpm --filter ./larson-server check && tsc --noEmit",
    "format": "prettier --write .",
    "test": "playwright test --config=larson-client/playwright.config.ts",
    "test:ui": "playwright test --ui --config=larson-client/playwright.config.ts",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "release": "changeset publish",
    "update": "pnpm update -i -L -r"
  },
  "devDependencies": {
    "@changesets/changelog-git": "^0.2.0",
    "@changesets/cli": "^2.27.12",
    "@eslint/js": "^9.19.0",
    "@finsweet/eslint-config": "^3.0.3",
    "@finsweet/tsconfig": "^1.4.2",
    "@playwright/test": "^1.50.1",
    "@types/node": "^24.10.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.24.2",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0",
    "wrangler": "^4.52.1"
  },
  "engines": {
    "pnpm": ">=10"
  }
}
